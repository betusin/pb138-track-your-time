<!--suppress HtmlRequiredLangAttribute -->
<html>
<!--suppress HtmlRequiredTitleElement -->
<head>
    <style>
        html {
            zoom: 0.5;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen",
            "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue",
            sans-serif;
        }

        body {
            padding: 1rem;
        }

        th {
            text-align: left;
        }

        .sessions {
            width: 100%;
            border-collapse: collapse;
        }

        .sessions, .session--row, .session--cell {
            border: 1px solid;
        }

        .session--cell {
            padding: 0.5rem;
        }

        .report-header {
            margin-bottom: 1rem;
        }

        .parameters--cell {
            padding: 0.33rem;
        }

        .report-header__title,
        .report-header__subtitle {
            display: inline;
        }

        .report-header__subtitle {
            margin-left: 1rem;
            color: rgba(0, 0, 0, 0.66);
        }
    </style>
</head>
<body>
<div class="content">
    <div class="report-header">
        <h1 class="report-header__title"><%= project.name; %></h1>
        <h2 class="report-header__subtitle"><%= project.customer; %></h2>
    </div>
    <div>
    </div>
    <table class="parameters">
        <tr>
            <th class="parameters--cell">From</th>
            <th class="parameters--cell">To</th>
            <th class="parameters--cell">Work hours</th>
            <th class="parameters--cell">Total</th>
        </tr>
        <tr>
            <td class="parameters--cell"><%= formatter(from); %></td>
            <td class="parameters--cell"><%= formatter(to); %></td>
            <td class="parameters--cell"><%= hourFormatter(hours); %></td>
            <td class="parameters--cell"><%= total.toFixed(2); %><%= currency; %></td>
        </tr>
    </table>
    <hr/>
    <table class="content sessions">
        <tr class="session--row">
            <th class="session--cell">Work hours</th>
            <th class="session--cell">Start</th>
            <th class="session--cell">End</th>
            <th class="session--cell">Hourly rate</th>
            <th class="session--cell">Note</th>
        </tr>
        <% sessions.forEach(session => { %>
            <tr class="session--row">
                <td class="session--cell"><%= hourFormatter(hourCalc(session)); %></td>
                <td class="session--cell"><%= formatter(session.fromDate); %></td>
                <td class="session--cell"><%= formatter(session.toDate) %></td>
                <td class="session--cell"><%= session.hourlyRate %><%= currency; %></td>
                <td class="session--cell"><%= session.note %></td>
            </tr>
        <% }); %>
    </table>
</div>
</body>
</html>